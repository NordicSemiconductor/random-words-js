{
  "name": "@nordicsemiconductor/random-words",
  "version": "0.0.0-development",
  "description": "Returns random 8-letter words from the Webster's Unabridged Dictionary",
  "main": "index.js",
  "bin": "cli.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "node tests.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "runkitExampleFilename": "example.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/random-words-js.git"
  },
  "keywords": [
    "random",
    "words",
    "nRF Asset Tracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/random-words-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/random-words-js#readme",
  "dependencies": {
    "random-number-csprng": "1.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-angular": "13.2.0",
    "husky": "7.0.2",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "standard": "16.0.4"
  },
  "lint-staged": {
    "*.{yml,md,json}": [
      "prettier --write"
    ],
    "*.{js}": [
      "standard --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true
  },
  "files": [
    "package-lock.json",
    "README.md",
    "LICENSE",
    "index.js",
    "index.d.ts",
    "cli.js",
    "example.js",
    "words.js",
    "test.js"
  ]
}
